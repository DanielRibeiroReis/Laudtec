<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_questionario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    >

    <RadioGroup
        android:id="@+id/radioGrupoQuestionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RadioButton
            android:id="@+id/radioPagina1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/radio_questionario"
            android:button="@android:color/transparent"
            android:checked="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="1"
            android:textColor="@color/brancoTexto"
            android:textSize="16sp" />


        <RadioButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radio_espaco"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:paddingHorizontal="4dp"
            android:scaleX="3"
            android:translationX="-8sp" />

        <RadioButton
            android:id="@+id/radioPagina2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/radio_questionario"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="2"
            android:textColor="@color/brancoTexto"
            android:textSize="16sp" />

        <RadioButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radio_espaco"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:paddingHorizontal="4dp"
            android:scaleX="3"
            android:translationX="-8sp" />

        <RadioButton
            android:id="@+id/radioPagina3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/radio_questionario"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="3"
            android:textColor="@color/brancoTexto"
            android:textSize="16sp" />

        <RadioButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radio_espaco"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:paddingHorizontal="4dp"
            android:scaleX="3"
            android:translationX="-8sp" />

        <RadioButton
            android:id="@+id/radioPagina4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/radio_questionario"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="4"
            android:textColor="@color/brancoTexto"
            android:textSize="16sp" />

        <RadioButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radio_espaco"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:paddingHorizontal="4dp"
            android:scaleX="3"
            android:translationX="-8sp" />

        <RadioButton
            android:id="@+id/radioPagina5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/radio_questionario"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="5"
            android:textColor="@color/brancoTexto"
            android:textSize="16sp" />

        <RadioButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radio_espaco"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:paddingHorizontal="4dp"
            android:scaleX="3"
            android:translationX="-8sp" />

        <RadioButton
            android:id="@+id/radioPagina6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/radio_questionario"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="6"
            android:textColor="@color/brancoTexto"
            android:textSize="16sp" />

        <RadioButton

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radio_espaco"
            android:button="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:paddingHorizontal="4dp"
            android:scaleX="3"
            android:translationX="-8sp" />

        <RadioButton
            android:id="@+id/radioPagina7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/radio_questionario"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="7"
            android:textColor="@color/brancoTexto"
            android:textSize="16sp" />

    </RadioGroup>


    <LinearLayout
        android:id="@+id/espacoquestionario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/botaoSalvarQuestionario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeEdificioQuest">


        <include
            android:id="@+id/includeLayout1"
            layout="@layout/questionario1"

            />

        <include
            android:id="@+id/includeLayout2"
            layout="@layout/questionario2"
            android:visibility="gone" />

        <include
            android:id="@+id/includeLayout3"
            layout="@layout/questionario3"
            android:visibility="gone" />

        <include
            android:id="@+id/includeLayout4"
            layout="@layout/questionario4"
            android:visibility="gone" />

        <include
            android:id="@+id/includeLayout5"
            layout="@layout/questionario5"
            android:visibility="gone" />

        <include
            android:id="@+id/includeLayout6"
            layout="@layout/questionario6"
            android:visibility="gone" />

        <include
            android:id="@+id/includeLayout7"
            layout="@layout/questionario7"
            android:visibility="gone" />


    </LinearLayout>

    <Button
        android:id="@+id/botaoSalvarQuestionario"
        style="@style/botaooutline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Proximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nomeEdificioQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="Nome edificio"
        app:layout_constraintStart_toStartOf="@+id/radioGrupoQuestionario"
        app:layout_constraintTop_toBottomOf="@+id/radioGrupoQuestionario" />


</androidx.constraintlayout.widget.ConstraintLayout>





