<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pin_senha">

    <EditText
        android:id="@+id/pin5id"
        style="@style/inputCustom"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintStart_toEndOf="@+id/pin4id"
        app:layout_constraintTop_toBottomOf="@+id/descEsqueciSEnha" />

    <EditText
        android:id="@+id/pin4id"
        style="@style/inputCustom"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintStart_toEndOf="@+id/pin3id"
        app:layout_constraintTop_toBottomOf="@+id/descEsqueciSEnha" />

    <EditText
        android:id="@+id/pin3id"
        style="@style/inputCustom"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintStart_toEndOf="@+id/pin2id"
        app:layout_constraintTop_toBottomOf="@+id/descEsqueciSEnha" />

    <EditText
        android:id="@+id/pin2id"
        style="@style/inputCustom"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintStart_toEndOf="@+id/pin1id"
        app:layout_constraintTop_toBottomOf="@+id/descEsqueciSEnha" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Esqueci minha senha"
        android:textColor="#535353"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/descEsqueciSEnha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Para redefinir sua senha, enviaremos um PIN de 6 dÃ­gitos para o seu e-mail cadastrado."
        android:textColor="@color/cinzaLabel"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/botaoRedefinirSenhaid"
        style="@style/botaooutline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="Redefinir minha senha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pin1id"
        style="@style/inputCustom"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintStart_toStartOf="@+id/descEsqueciSEnha"
        app:layout_constraintTop_toBottomOf="@+id/descEsqueciSEnha" />

    <EditText
        android:id="@+id/pin6id"
        style="@style/inputCustom"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintStart_toEndOf="@+id/pin5id"
        app:layout_constraintTop_toBottomOf="@+id/descEsqueciSEnha" />

    <TextView
        android:id="@+id/esqueciSenhaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Receber um novo PIN"
        android:textColor="@color/cinzaLabel"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/botaoRedefinirSenhaid"
        app:layout_constraintEnd_toEndOf="@+id/botaoRedefinirSenhaid" />

</androidx.constraintlayout.widget.ConstraintLayout>